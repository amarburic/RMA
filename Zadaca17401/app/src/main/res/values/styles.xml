<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ravnomjernaRaspodjelaHorizontalno">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ravnomjernaRaspodjelaVertikalno">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="nazivProfil" parent="ravnomjernaRaspodjelaVertikalno">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">@dimen/velicinaNazivaProfil</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="slikaElementListe">
        <item name="android:layout_height">@dimen/visinaSlikeElementListe</item>
        <item name="android:layout_width">@dimen/sirinaSlikeElementListe</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">fitXY</item>

    </style>
    <style name="nazivElementListe">
        <item name="android:textSize">@dimen/velicinaNazivaElementListe</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="slikaProfil">
        <item name="android:layout_height">192dp</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:scaleType">fitXY</item>

    </style>
    <style name="slikaProfilManja">
    <item name="android:layout_height">150dp</item>
    <item name="android:layout_width">125dp</item>
    <item name="android:layout_marginRight">15dp</item>
    <item name="android:layout_marginBottom">15dp</item>
    <item name="android:scaleType">fitXY</item>
    </style>
    <style name="podaciLayoutElementListe">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="biografijaProfil">
        <item name="android:layout_marginTop">@dimen/biografijaTopMargin</item>
        <item name="android:layout_marginBottom">@dimen/biografijaTopMargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/loremIpsum</item>
    </style>
    <style name="link">
        <item name="android:textColor">@color/bojaLinka</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
