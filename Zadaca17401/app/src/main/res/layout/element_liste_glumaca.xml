<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    >
    <ImageView
        android:id="@+id/imageSlikaGlumca"
        app:srcCompat="@drawable/no_image"
        style="@style/slikaElementListe"/>
    <LinearLayout
        style="@style/podaciLayoutElementListe">
        <TextView
            android:id="@+id/textViewNazivGlumca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            style="@style/nazivElementListe"
            android:text="TextView" />
        <TextView
            android:id="@+id/textViewGodinaRodjenja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="TextView" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewMjestoRodjenjaGlumca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
            <TextView
                android:id="@+id/textViewRejtingGlumca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:text="TextView" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>